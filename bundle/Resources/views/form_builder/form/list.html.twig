{% extends 'EzPlatformAdminUiBundle::layout.html.twig' %}

{% block title %}{{ 'Forms List'|trans }}{% endblock %}

{%- block breadcrumbs -%}
    {% include '@EzPlatformAdminUi/parts/breadcrumbs.html.twig' with { items: [
        { value: 'Forms List'|trans }
    ]} %}
{%- endblock -%}

{%- block page_title -%}
    {% include '@EzPlatformAdminUi/parts/page_title.html.twig' with {
        title: 'Forms List'|trans,
        iconName: 'article'
    } %}
{%- endblock -%}

{%- block content -%}
    <section class="container my-4">
        <div class="ez-table-header">
            <div class="ez-table-header__headline">{{ "Forms List"|trans }}</div>
            <div>
                <a class="btn btn-primary" href="{{ path('form_builder_form_new') }}">
                    <svg class="ez-icon ez-icon-create">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink"
                             xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#create"></use>
                    </svg>
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'Form Name'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for formItem in forms %}
                <tr>
                    <td>{{ formItem.name }}</td>
                    <td class="text-right">
                        <a href="{{ path('form_builder_form_edit', {id: formItem.id}) }}"
                           class="btn btn-icon"
                           title="{{ 'Edit'|trans }}">
                            <svg class="ez-icon ez-icon-edit">
                                <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#edit"></use>
                            </svg>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagerfanta(forms, 'ez') }}
    </section>
{%- endblock -%}