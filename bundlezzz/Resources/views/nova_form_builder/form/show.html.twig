{% extends 'EzPlatformAdminUiBundle::layout.html.twig' %}

{% form_theme formView '@EzPlatformAdminUi/form_fields.html.twig' %}

{% block content %}
    <div class="container">
        <h2>{{ formEntity.name }}</h2>
        <section class="user-form col-md-6 col-md-offset-3">
            {{ form_start(formView) }}
            {{ form_widget(formView) }}

            <div class="mt-3">
                <button class="btn btn-primary" type="submit">{{ 'Submit'|trans }}</button>
            </div>
            {{ form_end(formView) }}
        </section>
    </div>
{% endblock %}